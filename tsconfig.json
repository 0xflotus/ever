{
	"compilerOptions": {
		"module": "commonjs",
		"noLib": false,
		"skipLibCheck": true,
		"lib": ["es2017", "esnext.asynciterable"],
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es2017",
		"strict": true,
		"strictPropertyInitialization": false,
		"sourceMap": true,
		"newLine": "LF"
	},
	"exclude": [
		"node_modules",
		"packages/*/node_modules",
		"packages/*/lib",
		"packages/*/build"
	]
}
