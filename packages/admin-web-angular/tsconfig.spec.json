{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": "./src",
		"outDir": "./build",
		"rootDir": "./src",
		"target": "es5",
		"types": ["node", "reflect-metadata", "googlemaps", "jasmine"],
		"paths": {
			"@angular/*": ["../node_modules/@angular/*"],
			"@nebular/*": ["../node_modules/@nebular/*"],
			"@modules/server.common/*": [
				"@modules/server.common/*",
				"../node_modules/@ever-platform/common/src/*"
			],
			"@modules/client.common.angular2/*": [
				"@modules/client.common.angular2/*",
				"../node_modules/@ever-platform/common-angular/src/*"
			],
			"@pyro/*": [
				"@pyro/*",
				"../node_modules/@ever-platform/common/src/@pyro/*"
			],
			"mongoose": [
				"../node_modules/@ever-platform/common-angular/src/mongoose-placeholder"
			],
			"typeorm": [
				"../node_modules/@ever-platform/common-angular/src/typeorm-placeholder"
			],
			"environment": ["./environments/environment"],
			"core-js/es7/reflect": [
				"../node_modules/core-js/proposals/reflect-metadata"
			],
			"core-js/es7/array": ["../node_modules/core-js/stable/array"],
			"core-js/es7/object": ["../node_modules/core-js/stable/object"],
			"core-js/es6/*": ["../node_modules/core-js/es"]
		}
	},
	"include": [
		"./src/**/*.ts",
		"./node_modules/angular2-logger/app/core/level.ts",
		"./node_modules/angular2-logger/app/core/logger.ts",
		"./node_modules/angular2-logger/app/core/providers.ts",
		"./src/modules/client.common.angular2/mongoose-placeholder.ts",
		"./src/modules/client.common.angular2/typeorm-placeholder.ts",
		"./src/modules/**/*.ts"
	]
}
