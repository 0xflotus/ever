{
	"compilerOptions": {
		"module": "commonjs",
		"lib": ["dom", "esnext", "es2017.object"],
		"baseUrl": "./src",
		"outDir": "./build",
		"rootDir": "./src",
		"incremental": true,
		"removeComments": true,
		"target": "es6",
		"moduleResolution": "node",
		"preserveConstEnums": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"strictNullChecks": false,
		"typeRoots": ["node_modules/@types"],
		"types": ["node", "reflect-metadata", "jest"],
		"paths": {
			"@pyro/*": [
				"@pyro/*",
				"../node_modules/@ever-platform/common/@pyro/*"
			],
			"@modules/server.common/*": [
				"@modules/server.common/*",
				"../node_modules/@ever-platform/common/*"
			]
		}
	},
	"include": ["src/**/*.ts", "./*.ts"],
	"exclude": ["backup", "build", "backup/TrackingService", "node_modules"]
}
